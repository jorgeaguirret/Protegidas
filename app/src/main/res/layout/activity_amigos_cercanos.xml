<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Amigos_Cercanos"
    android:background="@drawable/gradient_background">


    <TextView
        android:id="@+id/loc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="CIRCULO CERCANO"
        android:textColor="#000000"
        android:textColorHighlight="#000000"
        android:textColorLink="#000000"
        android:textIsSelectable="true"
        android:textSize="22sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:elegantTextHeight="true"
        android:padding="15dp"
        android:text="Selecciona tus amigos desde los contactos"
        android:textColor="#000000"
        android:textIsSelectable="true"
        android:textSize="18sp"
        tools:ignore="UnusedAttribute" />


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="145dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <EditText
            android:id="@+id/fono1"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="14dp"
            android:layout_marginRight="14dp"
            android:layout_toStartOf="@+id/addContact2"
            android:layout_toLeftOf="@+id/addContact2"
            android:inputType="phone" />

        <Button
            android:id="@+id/agregarContacto1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/addContact2"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginVertical="15dp"
            android:layout_marginLeft="200dp"
            android:background="@drawable/gradient_background2"
            android:padding="10dp"
            android:text="@string/add_contact"
            android:textColor="#ffffff" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="260dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <EditText
            android:id="@+id/fono2"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/phone1"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="14dp"
            android:layout_marginRight="14dp"
            android:layout_toStartOf="@+id/addContact2"
            android:layout_toLeftOf="@+id/addContact2"
            android:inputType="phone" />

        <Button
            android:id="@+id/agregarContacto2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/addContact2"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginVertical="15dp"
            android:layout_marginLeft="200dp"
            android:background="@drawable/gradient_background2"
            android:padding="10dp"
            android:text="@string/add_contact"
            android:textColor="#ffffff" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="375dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">


        <EditText
            android:id="@+id/fono3"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/phone1"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="14dp"
            android:layout_marginRight="14dp"
            android:layout_toStartOf="@+id/addContact2"
            android:layout_toLeftOf="@+id/addContact2"
            android:inputType="phone" />

        <Button
            android:id="@+id/agregarContacto3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/addContact2"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginVertical="15dp"
            android:layout_marginLeft="200dp"
            android:background="@drawable/gradient_background2"
            android:padding="10dp"
            android:text="@string/add_contact"
            android:textColor="#ffffff" />

    </androidx.cardview.widget.CardView>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_navigation"
        android:background="@drawable/bottom_navigation_gradient"
        app:itemTextColor="@drawable/selector"
        app:itemIconTint="@drawable/selector"
        app:menu="@menu/menu_navigation"
        android:layout_marginBottom="0dp"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
