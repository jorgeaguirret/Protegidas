<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Panel_Alerta"
    android:background="@drawable/gradient_background">

    <TextView
        android:id="@+id/loc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="PANEL DE ALERTA"
        android:textColor="#874da2"
        android:textStyle="bold"
        android:textColorHighlight="#000000"
        android:textColorLink="#000000"
        android:textIsSelectable="true"
        android:textSize="22sp" />


    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="125dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="155dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <EditText
            android:id="@+id/editText2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/edit_text_border"
            android:fontFamily="@font/capriola"
            android:hint="Ingrese su mensaje..."
            android:padding="15dp"
            android:textSize="15dp" />

        <Button
            android:id="@+id/send_alert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="230dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/gradient_background3"
            android:drawableStart="@android:drawable/ic_menu_send"
            android:fontFamily="@font/capriola"

            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:padding="10dp"
            android:text="Enviar"
            android:textColor="#FDFCFC"
            android:textStyle="bold"
            android:visibility="visible"
            tools:visibility="visible" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="325dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <TextView
            android:id="@+id/loc3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/capriola"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:text="Textos Rapidos: "
            android:textColor="#000000"
            android:textColorHighlight="#000000"
            android:textColorLink="#000000"
            android:textIsSelectable="true"
            android:textSize="20sp" />
        />

        <Button
            android:id="@+id/emergencia"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/gradient_background2"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:padding="10dp"
            android:text="Emergencia!"
            android:textColor="#ffffff"
            android:visibility="visible"
            tools:visibility="visible" />


        <Button
            android:id="@+id/llama_a_la_policia"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="60dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/gradient_background2"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:padding="10dp"
            android:text="Llama a la policia!"
            android:textColor="#ffffff"
            android:visibility="visible"
            tools:visibility="visible" />

        <Button
            android:id="@+id/ven_aqui_ahora"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="125dp"
            android:background="@drawable/gradient_background2"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:padding="10dp"
            android:text="Ven a mi casa rapido!"
            android:textColor="#ffffff"
            android:visibility="visible"
            tools:visibility="visible" />


        <Button
            android:id="@+id/ayudame"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="125dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/gradient_background2"
            android:elevation="20dp"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:padding="10dp"
            android:text="Ayudame!"
            android:textColor="#ffffff"
            android:visibility="visible"
            tools:visibility="visible" />


    </androidx.cardview.widget.CardView>

    <ImageButton
        android:id="@+id/llamada_de_emergencia"
        android:layout_width="59dp"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="325dp"
        android:layout_marginBottom="90dp"
        android:background="@drawable/gradient_background4"
        android:elevation="20dp"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:padding="15dp"
        android:src="@drawable/llamar"
        android:visibility="visible"
        tools:visibility="visible" />
...
    .

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:background="@drawable/bottom_navigation_gradient"
        app:itemIconTint="@drawable/selector"
        app:itemTextColor="@drawable/selector"
        app:menu="@menu/menu_navigation" />

</RelativeLayout>
