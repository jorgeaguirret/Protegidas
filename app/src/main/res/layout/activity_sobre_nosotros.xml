<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SobreNosotros"
    android:background="@drawable/gradient_background">


    <TextView
        android:id="@+id/loc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="SOBRE NOSOTROS"
        android:textColor="#874da2"
        android:textColorHighlight="#000000"
        android:textColorLink="#000000"
        android:textIsSelectable="true"
        android:textSize="22sp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:layout_width="356dp"
        android:layout_height="387dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        app:cardBackgroundColor="#A15A0688"
        app:cardCornerRadius="30dp"
        app:cardElevation="13dp">

        <TextView
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:elegantTextHeight="true"
            android:lineHeight="30dp"
            android:padding="15dp"
            android:text="Esta aplicación ha sido desarrollada por el equipo estudiantes de Ingeniería en Informática de la Universidad Tecnoogica de Chile, Inacap Sede Maipú. "
            android:textColor="#FFFFFF"
            android:textIsSelectable="true"
            android:textSize="20sp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="220dp"
            android:elegantTextHeight="true"
            android:padding="10dp"
            android:text="Juan Barra Urbina "
            android:textColor="#FFFFFF"
            android:textIsSelectable="true"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="255dp"
            android:elegantTextHeight="true"
            android:padding="10dp"
            android:text="Francisco Riveros Arias"
            android:textColor="#FFFFFF"
            android:textIsSelectable="true"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="290dp"
            android:elegantTextHeight="true"
            android:padding="10dp"
            android:text="Jorge Aguirre Toledo"
            android:textColor="#FFFFFF"
            android:textIsSelectable="true"
            android:textSize="18sp" />

    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="480dp"
        app:srcCompat="@drawable/fondoprotegidas" />


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:background="@drawable/bottom_navigation_gradient"
        app:itemIconTint="@drawable/selector"
        app:itemTextColor="@drawable/selector"
        app:menu="@menu/menu_navigation" />

</RelativeLayout>
